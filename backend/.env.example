# ===========================================
# Note Taking API - Environment Variables
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=8080
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/note-taking-app
MONGODB_TEST_URI=mongodb://localhost:27017/note-taking-app-test

# JWT Authentication (Future)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRE=30d

# Redis Configuration (Future)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Email Configuration (Future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@notetakingapp.com
FROM_NAME=Note Taking App

# Blob Storage Configuration (Future)
# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=note-taking-app-storage

# File Upload Configuration (Future)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_PATH=uploads/

# Rate Limiting (Future)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Future)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Logging Configuration (Future)
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Documentation (Future)
API_DOCS_URL=/api-docs
SWAGGER_TITLE=Note Taking API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=REST API for managing notes

# Security Configuration (Future)
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key

# External Services (Future)
# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Webhook Configuration (Future)
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_URL=https://your-app.com/webhooks

# Monitoring & Analytics (Future)
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token
